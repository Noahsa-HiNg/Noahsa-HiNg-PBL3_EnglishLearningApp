<Page x:Class="GUI.ManagerLesson"  
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
     xmlns:local="clr-namespace:GUI"  
     mc:Ignorable="d"   
     d:DesignHeight="450" d:DesignWidth="800"  
     Title="ManagerLesson">  

   <Grid Margin="10">  
       <Grid.RowDefinitions>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="*"/>  
       </Grid.RowDefinitions>  

       <TextBlock Text="Edit Lesson Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>  

       <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">  
           <StackPanel Orientation="Horizontal" Margin="0,5">  
               <TextBlock Text="Lesson Title:" VerticalAlignment="Center" Width="100"/>  
               <TextBox x:Name="LessonTitleTextBox" Width="300" Margin="5,0,0,0"/>  
           </StackPanel>  

           <StackPanel Orientation="Horizontal" Margin="0,5">  
               <TextBlock Text="Video Source:" VerticalAlignment="Center" Width="100"/>  
               <TextBox x:Name="VideoSourceTextBox" Width="300" Margin="5,0,0,0"/>  
           </StackPanel>  
       </StackPanel>  

       <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0">
            <Button Background="#D6CFF5" Content="Save" Width="100" Margin="5"/>
            <Button Background="#D6CFF5" Content="Delete" Width="100" Margin="5"/>  
       </StackPanel>  
   </Grid>  
</Page>
