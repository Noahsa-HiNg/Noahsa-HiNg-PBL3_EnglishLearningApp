<Page x:Class="GUI.CourseDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CourseDetailPage">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Description}" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Create_By}" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Price}" FontSize="14" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
