<Application x:Class="GUI.App"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:GUI"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            StartupUri="LoginGUI.xaml">
   <Application.Resources>
       <ResourceDictionary>
           <ResourceDictionary.MergedDictionaries>
               <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="DarkBlue" SecondaryColor="DarkGreen" />
               <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
               <ResourceDictionary Source="/Resource/MainWindowResource.xaml"/>
               <ResourceDictionary Source="/Resource/MainResource.xaml"></ResourceDictionary>
           </ResourceDictionary.MergedDictionaries>
           <!-- Moved the Style definition inside the ResourceDictionary -->
           <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
               <Setter Property="FontSize" Value="16"/>
               <Setter Property="FontWeight" Value="Bold"/>
               <Setter Property="Margin" Value="0,5,0,5"/>
           </Style>
       </ResourceDictionary>
   </Application.Resources>
</Application>
