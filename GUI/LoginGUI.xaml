<Window x:Class="GUI.LoginGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="LoginGUI" Height="450" Width="400">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/LoginUIResource.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20" >
        <StackPanel VerticalAlignment="Center">
            <!-- Tiêu đề -->
            <StackPanel Background="#D6CFF5">
                <TextBlock Text="Welcome back!" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

                <TextBlock Text="Please sign in with your email address and password."
                   Foreground="Gray"
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
            </StackPanel>
            <!-- Form đăng nhập -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email/Username -->
                <TextBlock Text="Email address or username"
                        Margin="0,0,0,5"/>

                <TextBox x:Name="txtUsername"
                     Height="30"/>

                <!-- Password -->
                <TextBlock Text="Password"
                        Margin="0,10,0,5"/>

                <PasswordBox x:Name="txtPassword"
                         Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,20">
                <CheckBox x:Name="chkRememberMe" 
          Content="Remember me"
          VerticalAlignment="Center"
          IsChecked="True"/>

                <TextBlock Text="Forgot password?"
           Foreground="#0078D7"
           Margin="15,0,0,0"
           VerticalAlignment="Center"
           Cursor="Hand"
           TextDecorations="Underline">
                    <TextBlock.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding ForgotPasswordCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
            <!-- Nút đăng nhập -->
            <Button x:Name="btnLogin"
                Content="Login"
                Height="50"
                Width="200"
                Background="#D6CFF5"
                Foreground="Black"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"/>
            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
                <TextBlock Text="Already have an account? "/>
                <TextBlock Text="Sign in" 
                       Foreground="#0078D7"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <TextBlock.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding SignInCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
