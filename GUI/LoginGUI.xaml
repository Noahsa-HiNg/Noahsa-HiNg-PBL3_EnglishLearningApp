<Window x:Class="GUI.LoginGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LoginGUI" Height="450" Width="400">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/LoginUIResource.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>
            <!-- Tiêu đề -->
            <StackPanel Background="#D6CFF5" Margin="0,0,0,0">
                <TextBlock Text="Welcome back!" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Please sign in with your email address and password."
                           Foreground="Gray"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            <!-- Form đăng nhập -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email/Username -->
                <TextBlock Text="Username"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="txtUsername"
                         Padding="5"
                         Height="30"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Margin="0,10,0,5"/>

                <Grid>
                    <PasswordBox x:Name="pwbPassword"
                        Height="30" 
                        Margin="0,0,0,0"
                                 Padding="5"
                        PasswordChanged="pwbPassword_PasswordChanged"
                        Visibility="Visible"/>
                    <TextBox x:Name="txtboxPassword"
                             Height="30"
                             Margin="0,0,0,0"
                             TextChanged="textBoxPassword_TextChanged"
                             Visibility="Collapsed"
                             />
                    <Button x:Name="toggleButton" 
                        Content="🙈" 
                        Width="30" Height="30"
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right"
                        Margin="0,0,5,4"
                        Click="toggleButton_Click"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        FontSize="16"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,10">
                <CheckBox x:Name="chkRememberMe" 
                          Content="Remember me"
                          VerticalAlignment="Center"
                          IsChecked="False"/>

                <TextBlock Text="Forgot password?"
                           Foreground="#0078D7"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"
                           Cursor="Hand"
                           TextDecorations="Underline"
                           MouseLeftButtonDown="ForgotPassword_Click" />
                <!-- Thêm sự kiện Click -->
            </StackPanel>

            <!--Thông báo lỗi-->
            <TextBlock 
                x:Name="txtMessage"
                Height="15"
                Foreground="Red"
                Visibility="Hidden"
                Margin="0,0,0,15" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Nút đăng nhập -->
            <Button x:Name="btnLogin"
                    Margin="0,5,0,0"
                    Content="Sign In"
                    Height="50"
                    Width="200"
                    Background="#D6CFF5"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand" Click="btnLogin_Click"
                    />
            <!-- Thêm sự kiện Click -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0" Height="20">
                <TextBlock Text="Don't have an account? " RenderTransformOrigin="0.51,2.352"/>
                <TextBlock Text="Sign up" 
                           Foreground="#0078D7"
                           FontWeight="SemiBold"
                           TextDecorations="Underline"
                           Cursor="Hand"
                           MouseLeftButtonDown="SignUp_Click"/>
                <!-- Thêm sự kiện Click -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>