<Window x:Class="GUI.RegisterGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="RegisterGUI" Height="679" Width="489">
    <Grid Margin="20" >
        <StackPanel VerticalAlignment="Center">
            <!-- Tiêu đề -->
            <StackPanel Background="#D6CFF5" Height="60" Margin="0,0,0,10">
                <TextBlock Text="Welcome to MyPBL!" 
                  FontSize="24" 
                  FontWeight="SemiBold"
                  Margin="0,3,0,0"
                  HorizontalAlignment="Center"/>

                <TextBlock Text="Sign up to improve yourself in English"
                  Foreground="Gray"
                  Margin="0,0,0,10"
                  TextWrapping="Wrap"
                  HorizontalAlignment="Center"/>
            </StackPanel>
            <!-- Form đăng nhập -->
            <StackPanel Margin="0,0,0,20">
                <!-- Email/Username -->
                <TextBlock Text="Username"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="txtUsername"
                    Height="30" Margin="0,0,0,10"/>

                <!-- Password -->
                <TextBlock Text="Password"
                       Margin="0,0,0,5"/>
                <Grid>
                    <PasswordBox x:Name="txtPassword"
                        Height="30" Margin="0,0,0,10"/>
                    <Button x:Name="toggleButton" 
    Content="👁" 
    Width="30" Height="30"
    VerticalAlignment="Center" 
    HorizontalAlignment="Right"
    Margin="0,0,5,10"
    Click="toggleButton_Click"
    Background="Transparent"
    BorderBrush="{x:Null}"
    FontSize="16"/>
                </Grid>
                <TextBlock Text="Repeat your Password"
                       Margin="0,0,0,5"/>
                <Grid>
                    <PasswordBox x:Name="txtRePassword"
                        Height="30" Margin="0,0,0,10"
                        Padding="5"/>
                <Button x:Name="retoggleButton" 
                    Content="👁" 
                    Width="30" Height="30"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                    Margin="0,0,5,10"
                    Click="toggleButton_Click"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    FontSize="16"/>
                </Grid>
                <TextBlock Text="Name"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtName"
                         Margin="0,0,0,10"
                         Height="30"/>

                <TextBlock Text="Email"
                         Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail"
                         Margin="0,0,0,10"
                         Height="30"/>

                <TextBlock Text="Phone number"
                         Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone"
                         Margin="0,0,0,10"
                         Height="30"/>


            </StackPanel>


            <Button x:Name="btnSignIn"
               Content="Sign up"
               Height="36"
               Width="140"
               Background="#D6CFF5"
               Foreground="Black"
               FontWeight="SemiBold"
               BorderThickness="0"
               Cursor="Hand"/>
            <!-- Nút đăng nhập -->
            <StackPanel Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0">
                <TextBlock Text="Already have an account? "/>
                <TextBlock Text="Sign in" 
                      Foreground="#0078D7"
                      FontWeight="SemiBold"
                      Cursor="Hand">
                    <TextBlock.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding SignInCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
